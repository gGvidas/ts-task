{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "dist",
    "lib": ["ESNext"],
    "types": ["node"],
    "baseUrl": "./"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
